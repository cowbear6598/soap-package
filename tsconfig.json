{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./",
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "test", "lib", "**/*spec.ts"]
}